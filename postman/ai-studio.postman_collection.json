{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-7890-1234-56789abcdef0",
		"name": "AI Studio Gen - API Tests",
		"description": "Suíte de testes automatizados para validar a API de geração de imagens.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Gerar Imagem (Sucesso)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Validar se o status é 200 (OK)",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// 2. Validar se a resposta é uma imagem (Blob/Binary)",
							"pm.test(\"Response should be an image\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"    // Dependendo da sua API, pode ser image/jpeg ou application/octet-stream",
							"    // Vamos validar apenas se o corpo não está vazio",
							"    pm.expect(pm.response.size().body).to. be.above(0);",
							"});",
							"",
							"// 3. Validar tempo de resposta (Performance)",
							"pm.test(\"Response time is acceptable (< 20s for AI)\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(20000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"prompt\": \"A futuristic city testing API\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/api/generate",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"api",
						"generate"
					]
				},
				"description": "Envia um prompt para a rota de geração e valida o retorno binário da imagem."
			},
			"response": []
		},
		{
			"name": "Validar Erro (Prompt Vazio)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Se sua API retorna 400 ou 500 para prompt vazio, ajustamos aqui.",
							"// Assumindo que seu Backend trata isso, ou retorna erro.",
							"pm.test(\"Should handle empty prompt\", function () {",
							"    // Ajuste conforme o comportamento real da sua API",
							"    // Se sua API não trata e dá erro 500, o teste vai pegar isso.",
							"    pm.response.to.not.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"prompt\": \"\"\n}"
				},
